{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:eai:schemas:card:2.0.0",
  "title": "EAI Card v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "meta",
    "context",
    "bands",
    "policy",
    "prompt_pack",
    "output_contract",
    "trace_requirements"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "card_id",
        "card_version",
        "created_at",
        "ssot_version",
        "generator_version",
        "status"
      ],
      "properties": {
        "card_id": {
          "type": "string",
          "minLength": 8
        },
        "card_version": {
          "type": "string",
          "pattern": "^2\\."
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "ssot_version": {
          "type": "string"
        },
        "generator_version": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "verified",
            "certified",
            "deprecated"
          ]
        },
        "certification_label": {
          "type": "string"
        },
        "checksum_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    },
    "context": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "audience",
        "subject",
        "level",
        "task_description",
        "process_phase"
      ],
      "properties": {
        "audience": {
          "type": "string",
          "enum": [
            "teacher",
            "student",
            "team",
            "system"
          ]
        },
        "subject": {
          "type": "string",
          "minLength": 1
        },
        "level": {
          "type": "string",
          "minLength": 1
        },
        "task_description": {
          "type": "string",
          "minLength": 1
        },
        "process_phase": {
          "type": "string",
          "minLength": 1
        },
        "assessment_stakes": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "language": {
          "type": "string",
          "default": "nl-NL"
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "bands": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "K",
        "P",
        "TD",
        "C",
        "V",
        "T",
        "E",
        "L",
        "S",
        "B"
      ],
      "properties": {
        "K": {
          "$ref": "#/definitions/bandRef"
        },
        "P": {
          "$ref": "#/definitions/bandRef"
        },
        "TD": {
          "$ref": "#/definitions/bandRef"
        },
        "C": {
          "$ref": "#/definitions/bandRef"
        },
        "V": {
          "$ref": "#/definitions/bandRef"
        },
        "T": {
          "$ref": "#/definitions/bandRef"
        },
        "E": {
          "$ref": "#/definitions/bandRef"
        },
        "L": {
          "$ref": "#/definitions/bandRef"
        },
        "S": {
          "$ref": "#/definitions/bandRef"
        },
        "B": {
          "$ref": "#/definitions/bandRef"
        }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "allowed",
        "forbidden",
        "verification",
        "transparency"
      ],
      "properties": {
        "allowed": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "forbidden": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "verification": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "required_checks"
          ],
          "properties": {
            "required_checks": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "citation_required": {
              "type": "boolean",
              "default": false
            }
          }
        },
        "transparency": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "student_visible_steps",
            "ai_contribution_label"
          ],
          "properties": {
            "student_visible_steps": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "ai_contribution_label": {
              "type": "string"
            }
          }
        }
      }
    },
    "prompt_pack": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "paste_prompt_text",
        "system_prompt",
        "user_prompt_template"
      ],
      "properties": {
        "paste_prompt_text": {
          "type": "string",
          "minLength": 50
        },
        "system_prompt": {
          "type": "string",
          "minLength": 20
        },
        "user_prompt_template": {
          "type": "string",
          "minLength": 20
        },
        "output_format_instruction": {
          "type": "string"
        }
      }
    },
    "output_contract": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "contract_id",
        "format",
        "schema"
      ],
      "properties": {
        "contract_id": {
          "type": "string",
          "minLength": 3
        },
        "format": {
          "type": "string",
          "enum": [
            "json",
            "markdown_table",
            "text"
          ]
        },
        "schema": {
          "type": "object"
        }
      }
    },
    "trace_requirements": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "trace_level",
        "required_fields"
      ],
      "properties": {
        "trace_level": {
          "type": "string",
          "enum": [
            "minimal",
            "standard",
            "high"
          ]
        },
        "required_fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "evidence_links": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "validation_report": {
      "type": "object"
    }
  },
  "definitions": {
    "bandRef": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "code",
        "label"
      ],
      "properties": {
        "code": {
          "type": "string",
          "minLength": 2
        },
        "label": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}