{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:eai:schemas:design_pattern:2.0.0",
  "title": "EAI Design Pattern v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "pattern_id",
    "name",
    "purpose",
    "when_to_use",
    "steps",
    "risks",
    "mitigations",
    "claim_links",
    "confidence"
  ],
  "properties": {
    "pattern_id": { "type": "string", "minLength": 6 },
    "name": { "type": "string", "minLength": 3 },
    "purpose": { "type": "string", "minLength": 10 },
    "when_to_use": { "type": "string", "minLength": 10 },
    "steps": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["step", "instruction"],
        "properties": {
          "step": { "type": "integer", "minimum": 1 },
          "instruction": { "type": "string", "minLength": 5 },
          "example": { "type": "string" }
        }
      }
    },
    "risks": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 5 }
    },
    "mitigations": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 5 }
    },
    "claim_links": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 4 }
    },
    "confidence": {
      "type": "string",
      "enum": ["high", "medium", "low", "unknown"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
