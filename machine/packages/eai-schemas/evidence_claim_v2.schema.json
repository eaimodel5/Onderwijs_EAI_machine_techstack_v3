{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:eai:schemas:evidence_claim:2.0.0",
  "title": "Evidence Claim v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "claim_id",
    "statement",
    "supports",
    "confidence",
    "sources"
  ],
  "properties": {
    "claim_id": {
      "type": "string",
      "minLength": 3
    },
    "statement": {
      "type": "string",
      "minLength": 20
    },
    "supports": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "rubric_dimensions",
        "design_patterns"
      ],
      "properties": {
        "rubric_dimensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "design_patterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      }
    },
    "confidence": {
      "type": "string",
      "enum": [
        "high",
        "medium",
        "low"
      ]
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "limitations": {
      "type": "string"
    },
    "applicability_notes": {
      "type": "string"
    }
  }
}