{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:eai:schemas:evidence_source:2.0.0",
  "title": "Evidence Source v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "source_id",
    "type",
    "authors",
    "year",
    "title",
    "venue"
  ],
  "properties": {
    "source_id": {
      "type": "string",
      "minLength": 3
    },
    "type": {
      "type": "string",
      "enum": [
        "meta_analysis",
        "systematic_review",
        "randomized_trial",
        "quasi_experimental",
        "theory",
        "handbook",
        "policy",
        "other"
      ]
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "year": {
      "type": "integer",
      "minimum": 1900,
      "maximum": 2100
    },
    "title": {
      "type": "string",
      "minLength": 5
    },
    "venue": {
      "type": "string",
      "minLength": 2
    },
    "publisher": {
      "type": "string"
    },
    "doi": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  }
}