{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:eai:schemas:runlog:2.0.0",
  "title": "EAI Runlog v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "meta",
    "card_ref",
    "events"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "runlog_id",
        "created_at",
        "trace_level"
      ],
      "properties": {
        "runlog_id": {
          "type": "string",
          "minLength": 8
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "trace_level": {
          "type": "string",
          "enum": [
            "minimal",
            "standard",
            "high"
          ]
        },
        "anonymized": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "card_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "card_id",
        "card_version",
        "ssot_version"
      ],
      "properties": {
        "card_id": {
          "type": "string"
        },
        "card_version": {
          "type": "string"
        },
        "ssot_version": {
          "type": "string"
        }
      }
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "ts",
          "actor",
          "type",
          "payload"
        ],
        "properties": {
          "ts": {
            "type": "string",
            "format": "date-time"
          },
          "actor": {
            "type": "string",
            "enum": [
              "student",
              "teacher",
              "system",
              "llm",
              "tool"
            ]
          },
          "type": {
            "type": "string"
          },
          "payload": {
            "type": "object"
          }
        }
      }
    }
  }
}